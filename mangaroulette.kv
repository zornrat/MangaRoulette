<GenToggle@ToggleButton>:
    size_hint: 0.1, 0.15
    font_size: 12

<RootWidget@Widget>:
	RelativeLayout:
		pos: self.parent.pos
		size: self.parent.size
		Button:
			id: startSpin
			size_hint: 0.15, 0.15
			font_size: 48
			text: 'Spin'
			pos_hint: {'center_x':0.5, 'center_y':0.90}
		StackLayout:
		    pos_hint: {'center_x':0.5, 'center_y': 0.5}
            size_hint: 0.75, 0.5
            Spinner:
                id: statusSpinner
                values: 'Select Status', 'Ongoing', 'Finished'
                text: self.values[0]
                size_hint: 0.3,0.1
            Spinner:
                size_hint: 0.5, 0.1
		StackLayout:
		    size_hint: 1, 0.25
		    pos_hint: {'center_x':0.5, 'center_y':0.05}
