<GenToggle@ToggleButton>:
    size_hint: 0.2, 0.105
    font_size: 20

<MyRootWidget@RootWidget>:
    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size
        Button:
            id: startSpin
            size_hint: 0.5, 0.15
            font_size: 72
            text: 'Spin'
            pos_hint: {'center_x':0.5, 'center_y':0.90}
            on_release: root.spin()
        Spinner:
            id: statusSpinner
            values: 'Select Status', 'Ongoing', 'Finished'
            text: self.values[0]
            size_hint: 0.45, 0.075
            pos_hint: {'center_x':0.75, 'center_y':0.725}
            font_size: 20
        Spinner:
            id: popSpinner
            size_hint: 0.45, 0.075
            pos_hint: {'center_x':0.25, 'center_y':0.725}
            values: 'Select Popularity', 'Low', 'Medium', 'High'
            text: self.values[0]
            font_size: 20
        StackLayout:
            size_hint: 1, 0.75
            pos_hint: {'center_x':0.5, 'center_y':0.25}
            spacing: 5,5
            GenToggle:
                id: Action
                text: 'Action'
                on_press: root.genreStatus[self.text] = self.state
            GenToggle:
                id: Adult
                text: 'Adult'
                on_press: root.genreStatus[self.text] = self.state
